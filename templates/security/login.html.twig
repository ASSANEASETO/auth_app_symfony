{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
<section class="vh-100 bg-white">
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
            class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mt-4">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {# {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %} #}
                <div data-mdb-input-init class="form-outline mb-4">
                    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
                </div>
                <div data-mdb-input-init class="form-outline mb-4">
                    <label for="username">Adresse email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div data-mdb-input-init class="form-outline mb-4">
                    <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                <div class="d-flex text-lg-start mb-2 pt-2 justify-content-end"> 
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
                  </div>

                <button class="btn btn-lg btn-primary mb-4" type="submit">
                    Connexion
                </button>
                <div class="text-center text-lg-start pt-2">
                    <p class="small fw-bold mt-2 pt-1 mb-2">Vous n'êtes pas encore inscrit? <a href="{{ path('app_register') }}"
                        class="link-danger">S'inscrire</a></p> 
                </div>
            </form> <br>
        </div>
     </div>
    </div>

</section>
      
{% endblock %}
